@model WebAppExamJobMVC.Models.Discipline

@{
    ViewData["Title"] = "Создать учебную дисциплину";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Создать учебную дисциплину</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" style="margin-top: 10px;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="margin-top: 10px;">Вернуться в список</a>
</div>

